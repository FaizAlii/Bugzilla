<%= render 'layouts/navbar' %>

<h2>Your Bugs: </h2>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Deadline</th>
      <th>Type</th>
      <th>Status</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bugs.includes(:project).each do |bug| %>
      <tr>
        <td><%= bug.title %></td>
        <td><%= bug.description %></td>
        <td><%= bug.deadline %></td>
        <td><%= bug.bug_type.capitalize %></td>
        <td><%= bug.status.capitalize %></td>
        <td><%= bug.project.name %></td>
        <td><%= link_to 'Show', project_bug_path(bug.project, bug) %></td>
        <td><%= link_to 'Edit', edit_project_bug_path(bug.project, bug) %></td>
        <td><%= link_to 'Destroy', project_bug_path(bug.project, bug), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
