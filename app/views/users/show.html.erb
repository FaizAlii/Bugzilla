<% if @users.count.positive? %>
  <div class="col-12 col-md-10 col-lg-8 offset-md-1 offset-lg-2 border border-radius-5 p-3 mt-5">
      <h3 class="table-heading"><%= @user_type + 's:' %></h3>

      <table class="table table-hover table-responsive">
        <thead class="thead-light">
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Add User</th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td><%= link_to 'Add User', project_assignments_path(project_id: @project_id, user_id: user.id), method: :post %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
<% else %>
  <div class=" counter col-12 col-md-8 col-lg-6 offset-md-2 offset-lg-3 border border-radius-5 p-3 mt-3">
    <h3 class="count-heading mt-3 mx-4">No <%= @user_type + 's' %> found!</h3>
  </div>
<% end %>
