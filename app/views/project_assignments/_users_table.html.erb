<% if users.present? %>
  <table class="table table-hover table-responsive">
    <thead class="thead-light">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Add User</th>
      </tr>
    </thead>

    <tbody>
      <% users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <% if policy(project).edit? %>
            <td><%= link_to 'Add User', project_assignments_path(project: project, user_id: user.id, user_type: user_type), method: :post %></td>
          <% else %>
            <td>-</td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h3 class="table-heading">No <%= user_type + 's' %> found!</h3>
<% end %>
