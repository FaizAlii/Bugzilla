<div class="col-12 col-md-8 col-lg-6 offset-md-2 offset-lg-3 border border-radius-5 p-3 mt-5">
  <h3 class="table-heading">Projects</h3>

  <%= render 'layouts/search_bar', path: projects_path, search_name: 'Projects' %>

  <% if projects.count.positive? %>
    <table class="table table-hover table-responsive">
      <thead class="thead-light">
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
      </thead>

      <tbody>
        <% projects.each do |project| %>
          <tr>
            <td><%= link_to project.name, project_path(project) %></td>
            <td><%= project.description %></td>
            <td><%= link_to 'Edit', edit_project_path(project) %></td>
            <td><%= link_to 'Destroy', project_path(project), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <h3 class="table-heading">No Projects Found!</h3>
  <% end %>
</div>
