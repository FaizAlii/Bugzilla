<%= form_with(model: project, local: true, class: "col-12 col-md-6 col-lg-4 border border-radius-5 mt-5 p-4") do |form| %>
  <h3 class="form-heading mb-4"><%= form_type %></h3>

  <% if project.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% project.errors.full_messages.each do |message| %>
        <li class="text-danger"><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group mb-4 field">
    <%= form.text_field :name, class: 'form-control', placeholder: "Name" %>
  </div>

  <div class="form-group mb-4 field">
    <%= form.text_area :description, class: 'form-control', placeholder: "Description" %>
  </div>

  <div class="form-group mb-4 actions">
    <%= form.submit class: 'btn btn-primary btn-submit' %>
  </div>
<% end %>
