<p id="notice"><%= notice %></p>

<h1>Bugs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Deadline</th>
      <th>Type</th>
      <th>Status</th>
      <th>Screenshot</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bugs.each do |bug| %>
      <tr>
        <td><%= bug.title %></td>
        <td><%= bug.description %></td>
        <td><%= bug.deadline %></td>
        <td><%= bug.bug_type %></td>
        <td><%= bug.status %></td>
        <td><%= bug.screenshot %></td>
        <td><%= link_to 'Show', project_bug_path(@project, bug) %></td>
        <td><%= link_to 'Edit', edit_project_bug_path(@project, bug) %></td>
        <td><%= link_to 'Destroy', project_bug_path(@project, bug), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bug', new_project_bug_path(@project) %>
<%= link_to 'Project', project_path(@project) %>
<%= link_to 'Dashboard', users_path(@project) %>
