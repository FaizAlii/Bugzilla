<h1>Bugs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Deadline</th>
      <th>Type</th>
      <th>Status</th>
      <th>Screenshot</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bugs.each do |bug| %>
      <tr>
        <td><%= bug.title %></td>
        <td><%= bug.description %></td>
        <td><%= bug.deadline %></td>
        <td><%= bug.bug_type.capitalize %></td>
        <td><%= bug.status.capitalize %></td>
        <td><%= link_to 'Show', project_bug_path(@project, bug) %></td>
        <td><%= link_to 'Edit', edit_project_bug_path(@project, bug) %></td>
        <td><%= link_to 'Destroy', project_bug_path(@project, bug), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td>
          <% if policy(User).assign_bug? %>
            <%= link_to 'Assign to Myself', assign_bug_path(user_id: current_user.id, bug_id: bug.id) %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if policy(Bug).create? %>
  <%= link_to 'Report Bug', new_project_bug_path(@project) %>
<% end %>
<%= link_to 'Project', user_project_path(current_user, @project) %>
<%= link_to 'Dashboard', users_path(@project) %>
